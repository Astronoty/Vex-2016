#pragma config(Motor,  port2,           leftFront,     tmotorNone, openLoop)
#pragma config(Motor,  port3,           rightFront,    tmotorNone, openLoop)
#pragma config(Motor,  port5,           leftBack,      tmotorNone, openLoop)
#pragma config(Motor,  port6,           rightBack,     tmotorNone, openLoop)
//*!!Code automatically generated by 'ROBOTC' configuration wizard               !!*//


void stopDrive()
{
	motor[leftFront] = 0;
	motor[rightFront] = 0;
	motor[leftBack] = 0;
	motor[rightBack] = 0;
}

void drive(int x, int y, int r, int duration)
{
	motor[leftFront] = x + y + r;
	motor[rightFront] = x - y + r;
	motor[leftBack] = -x - y + r;
	motor[rightBack] = -x + y + r;

	wait1Msec(duration);
	stopDrive();
}

void forwardDrive(int y, int duration)
{
	motor[leftFront] = y;
	motor[rightFront] = -y;
	motor[leftBack] = -y;
	motor[rightBack] = y;

	wait1Msec(duration);
	stopDrive();
}

void strafeDrive(int x, int duration)
{
	motor[leftFront] = x;
	motor[rightFront] = x;
	motor[leftBack] = -x;
	motor[rightBack] = -x;

	wait1Msec(duration);
	stopDrive();
}

void liftUp()
{
	motor[placeholderA] = 120;
	motor[placeholderB] = -120;
	
	wait1Msec(1000);
	stopDrive();
}

void liftDown()
{

}

task main()
{
	forwardDrive(100, 3000);
	strafeDrive(100, 60000);
}
